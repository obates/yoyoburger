<% provide(:title,"#{@user.first_name} #{@user.last_name}") %>

<h1>Hi <%= @user.first_name %>!</h1>

<div class="">
	<% if @user.addresses.any? %>
		<h2>Addresses (<%= @user.addresses.count %>)</h2>

		<div class="panel-group" id="addressesGroup">
			<%= render @addresses %>
		</div>

	<% else %>
		<h2>Please add an address!</h2>
	<% end %>

	<% if @user.addresses.count < 4 %>

		<%= link_to "Add Address","../addresses/new",:method=>:get, :class=>"btn btn-sm btn-default" %>

	<% else %>

		Maximum number of addresses allowed!

	<% end %>
</div>	