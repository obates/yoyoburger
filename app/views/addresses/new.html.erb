<% provide(:title,"New address") %>

<h1>New Address</h1>

<%= form_for(@user , :html=>{:class=>"form-horizontal"} ) do |usrForm|%>

		<%= usrForm.fields_for :addresses do |addressForm| %> 

		<div class="form-group">
			<%= addressForm.label "House name/no",:class=>"col-sm-2 control-label"%>

			<div class="col-sm-4">
				<%= addressForm.text_field :house_name, :class=>"form-control",:placeholder=>"House name/number"  %>
			</div>
		</div>

		<div class="form-group">
			<%= addressForm.label "Street",:class=>"col-sm-2 control-label"%>

			<div class="col-sm-4">
				<%= addressForm.text_field :first_line, :class=>"form-control",:placeholder=>"Street"  %>
			</div>
		</div>

		<div class="form-group">
			<%= addressForm.label "City",:class=>"col-sm-2 control-label"%>

			<div class="col-sm-4">
				<%= addressForm.text_field :city, :class=>"form-control",:placeholder=>"City"  %>
			</div>
		</div>

		<div class="form-group">
			<%= addressForm.label "County",:class=>"col-sm-2 control-label"%>

			<div class="col-sm-4">
				<%= addressForm.text_field :area, :class=>"form-control",:placeholder=>"County"  %>
			</div>
		</div>

		<div class="form-group">
			<%= addressForm.label "Postcode",:class=>"col-sm-2 control-label"%>

			<div class="col-sm-4">
				<%= addressForm.text_field :postcode, :class=>"form-control",:placeholder=>"Postcode"  %>
			</div>
		</div>

	<% end %>

	<%= usrForm.submit "Add address", class: "btn btn-large btn-primary col-sm-offset-3"%>
<% end %>