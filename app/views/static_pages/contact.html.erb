<% provide(:title, 'Contact') %>



<div class="row">

	<div class="col-md-6 col-md-offset-3">
		<h1>Contact YoYo</h1>


		<%=form_for @contact_form do |f|%> 



		<div class="form-group">
			<%= f.label "Name",:class=>"col-md-12 control-label text-center"%>
			<div class="col-md-12">
				<%= f.text_field :name, :class=>"form-control",:placeholder=>""  %>
			</div>
		</div>

		<br>
		<br>
		<div class="form-group">
			<%= f.label "Email",:class=>"col-md-12 control-label text-center"%>
			<div class="col-md-12">
				<%= f.text_field :email, :class=>"form-control",:placeholder=>""  %>
			</div>
		</div>
		<br>
		<br>

		<div class="form-group">
			<%= f.label "Message",:class=>"col-md-12 control-label text-center"%>
			<div class="col-md-12">
				<%= f.text_area :message, :class=>"form-control",:placeholder=>""  %>
			</div>
		</div>

		<br>
		<br>
		<div class="form-group text-center" >


			<%=f.button :send, :class=>"formButton"%>

		</div>

		<%end%>



		<div class="row">
			<div class="col-md-6 text-center">
				<div class="facebook social-slide">
				</div>
			</div>

			<div class="col-md-6 text-center">
				<div class="twitter social-slide">
				</div>
			</div>
		</div>



		<div class="text-center">
			<h2>Get in touch</h2>

